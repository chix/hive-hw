};
const float scale_calibration_factor = 21500.0, scale_zero_factor = 0.35;
float scale_weight;
bool debug = true;

void setup() {
  if (debug) {
    Serial.begin(9600);
  }

  // Set up display
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C) && debug) {
    Serial.println(F("SSD1306 allocation failed"));
    for(;;);
  }
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C);
  delay(1000);
  display.clearDisplay();

  // Set up scale
  scale.begin(DT_PIN, SCK_PIN);
  scale.set_scale(scale_calibration_factor);
}

void loop() {
  delay(1000);

  // Read scale
  scale_weight = fabs(scale.get_units(3) - scale_zero_factor);

  if (debug) {
    Serial.println(scale_weight);
  }
  
  display.clearDisplay();
  
  // Draw bitmap
  display.drawBitmap(0, 0, bee_map, 32, 32, 1);
  display.display();

  // Draw text
  display.setTextSize(2);
  display.setTextColor(WHITE);
  display.setCursor(40, 12);
  display.print(scale_weight);
  display.println(" Kg");
  display.display(); 
}
